{
  "name": "tlp",
  "version": "0.0.2",
  "description": "track time and log tasks via terminal",
  "main": "./lib/index.js",
  "bin": {
    "tlp": "./lib/index.js"
  },
  "preferGlobal": true,
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "create": "npm run build && npm run test",
    "go": "npm run build && npm run start",
    "build": "rm -rf lib/* && tsc -p .",
    "local": "npm run build && rm -rf /home/weber/.nvm/versions/node/v14.4.0/bin/tlp && npm i -g .",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abdoutelb/tlp.git"
  },
  "keywords": [
    "cli",
    "time",
    "node",
    "log"
  ],
  "author": "abdoutelb",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abdoutelb/tlp/issues"
  },
  "homepage": "https://github.com/abdoutelb/tlp#readme",
  "devDependencies": {
    "@types/jest": "27.0.3",
    "@types/node": "16.11.12",
    "jest": "27.4.3",
    "nodemon": "2.0.15",
    "prettier": "2.5.1",
    "ts-jest": "27.1.0",
    "ts-node": "10.4.0",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.5.2"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "conf": "10.1.1",
    "figlet": "1.5.2"
  }
}
